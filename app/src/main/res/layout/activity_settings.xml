<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:elevation="10dp">

        <com.google.android.gms.ads.AdView
            android:id="@+id/ad_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id">
        </com.google.android.gms.ads.AdView>
    </LinearLayout>

    <!-- Header -->
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        android:background="@color/primaryColor"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Access to all important settings"
            android:textSize="40px"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage settings and permissions of the app"
            android:textSize="65px"
            android:textColor="@color/white"
            android:paddingRight="60dp"
            app:fontVariationSettings="'wght' 900"/>
    </LinearLayout>

    <!-- Body -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="190dp"
        android:layout_marginBottom="65dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp">

            <!-- Copy link function -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/platform_btn_bg">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enable copy link function"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        app:fontVariationSettings="'wght' 700" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Access to a fast download"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        app:backgroundTint="@null"
                        android:background="@drawable/low_op_button_bg"/>
                </LinearLayout>

                <com.github.angads25.toggle.widget.LabeledSwitch
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    app:textOn=""
                    app:textOff=""
                    app:on="true"
                    app:colorOn="@color/primaryColor"
                    app:colorBorder="@color/primaryColor"/>
            </LinearLayout>

            <!-- Enable storage access -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/platform_btn_bg">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enable storage access"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        app:fontVariationSettings="'wght' 700" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Access to download videos"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        app:backgroundTint="@null"
                        android:background="@drawable/low_op_button_bg"/>
                </LinearLayout>

                <com.github.angads25.toggle.widget.LabeledSwitch
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    app:textOn=""
                    app:textOff=""
                    app:on="true"
                    app:colorOn="@color/primaryColor"
                    app:colorBorder="@color/primaryColor"/>
            </LinearLayout>

            <!-- Enable notifications -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/platform_btn_bg">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enable notifications"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        app:fontVariationSettings="'wght' 700" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Receive conversion alerts"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        app:backgroundTint="@null"
                        android:background="@drawable/low_op_button_bg"/>
                </LinearLayout>

                <com.github.angads25.toggle.widget.LabeledSwitch
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    app:textOn=""
                    app:textOff=""
                    app:on="true"
                    app:colorOn="@color/primaryColor"
                    app:colorBorder="@color/primaryColor"/>
            </LinearLayout>

            <!-- Download support -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/platform_btn_bg">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Download support"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        app:fontVariationSettings="'wght' 700" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Download only over WiFi"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        app:backgroundTint="@null"
                        android:background="@drawable/low_op_button_bg"/>
                </LinearLayout>

                <com.github.angads25.toggle.widget.LabeledSwitch
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    app:colorBorder="@color/primaryColor"
                    app:colorOn="@color/primaryColor"
                    app:on="true"
                    app:textOff=""
                    app:textOn="" />
            </LinearLayout>

            <!-- Quality selection -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/platform_btn_bg">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Overrall quality"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        app:fontVariationSettings="'wght' 700" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Output quality for MP3/MP4"
                        android:textSize="15sp"
                        android:textColor="@android:color/black"
                        app:backgroundTint="@null"
                        android:background="@drawable/low_op_button_bg"/>
                </LinearLayout>

                <com.github.angads25.toggle.widget.LabeledSwitch
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    app:textOn="HD"
                    app:textOff="SD"
                    app:on="true"
                    app:colorOn="@color/primaryColor"
                    app:colorBorder="@color/primaryColor"/>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save changes"
                android:textSize="40px"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:fontVariationSettings="'wght' 700"
                app:backgroundTint="@null"
                android:background="@drawable/primary_button_bg"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="20dp"
        android:background="@drawable/footer_navigation"
        android:elevation="4dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/btn_go_home"
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/home_icon"/>

        <ImageView
            android:id="@+id/btn_go_profile"
            android:layout_marginStart="60dp"
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/profile_icon"/>

        <ImageView
            android:id="@+id/btn_go_files"
            android:layout_marginStart="60dp"
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/files_icon"/>

        <ImageView
            android:id="@+id/btn_go_settings"
            android:layout_marginStart="60dp"
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/settings_icon"/>
    </LinearLayout>

</FrameLayout>