<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilesActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:elevation="10dp">

        <com.google.android.gms.ads.AdView
            android:id="@+id/ad_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id">
        </com.google.android.gms.ads.AdView>
    </LinearLayout>

    <!-- Header -->
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        android:background="@color/primaryColor"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All your files in one place"
            android:textSize="40px"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage your downloaded files"
            android:textSize="65px"
            android:textColor="@color/white"
            android:paddingRight="60dp"
            app:fontVariationSettings="'wght' 900"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/searchFile"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:hint="Search file..."
                android:textColorHint="@android:color/darker_gray"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:textSize="40px"
                android:padding="12dp"
                android:background="@drawable/input_bg"
                android:singleLine="true"
                android:ellipsize="end"
                android:scrollHorizontally="true"
                android:drawableLeft="@drawable/search_icon"
                android:drawablePadding="10dp"/>

            <Button
                android:id="@+id/buttonChangeFormat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150px"
                android:text="MP4"
                android:textSize="40px"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:fontVariationSettings="'wght' 700"
                app:backgroundTint="@null"
                android:background="@drawable/input_bg"
                android:padding="12dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Body con RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewFiles"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="270dp"
        android:layout_marginBottom="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingTop="15dp"
        android:clipToPadding="false"
        tools:listitem="@layout/item_file" />

    <!-- Footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="20dp"
        android:background="@color/white"
        android:elevation="4dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/btn_go_home"
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/home_icon"/>

        <ImageView
            android:id="@+id/btn_go_profile"
            android:layout_marginStart="60dp"
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/profile_icon"/>

        <ImageView
            android:id="@+id/btn_go_files"
            android:layout_marginStart="60dp"
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/files_icon"/>

        <ImageView
            android:id="@+id/btn_go_settings"
            android:layout_marginStart="60dp"
            android:layout_gravity="center"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/settings_icon"/>
    </LinearLayout>

</FrameLayout>