<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        android:background="@color/primaryColor"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, Gustavo"
            android:textSize="40px"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convert any video to mp3 or mp4"
            android:textSize="65px"
            android:textColor="@color/white"
            android:paddingRight="60dp"
            app:fontVariationSettings="'wght' 900"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search platform"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="40px"
            android:padding="12dp"
            android:background="@drawable/input_bg"
            android:layout_marginTop="20dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:scrollHorizontally="true"/>
    </LinearLayout>

    <!-- Body -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="220dp"
        android:layout_marginBottom="75dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:stretchColumns="*">

            <!-- Primera fila -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp">

                <!-- Celda 1,1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/platform_btn_bg"
                    android:padding="30dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/youtube_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YouTube"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:fontVariationSettings="'wght' 500"
                        android:layout_marginTop="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mp3, mp4"
                        android:textSize="30px"
                        android:textColor="@android:color/darker_gray"
                        app:backgroundTint="@null"
                        android:background="@drawable/low_op_button_bg"/>
                </LinearLayout>

                <!-- Celda 1,2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/platform_btn_bg"
                    android:padding="30dp"
                    android:layout_marginLeft="25dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/tiktok_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TikTok"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:fontVariationSettings="'wght' 500"
                        android:layout_marginTop="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mp3, mp4"
                        android:textSize="30px"
                        android:textColor="@android:color/darker_gray"
                        app:backgroundTint="@null"
                        android:background="@drawable/low_op_button_bg"/>
                </LinearLayout>
            </TableRow>

            <!-- Segunda fila -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Celda 2,1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/platform_btn_bg"
                    android:padding="30dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/instagram_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Instagram"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:fontVariationSettings="'wght' 500"
                        android:layout_marginTop="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mp3, mp4"
                        android:textSize="30px"
                        android:textColor="@android:color/darker_gray"
                        app:backgroundTint="@null"
                        android:background="@drawable/low_op_button_bg"/>
                </LinearLayout>

                <!-- Celda 2,2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/platform_btn_bg"
                    android:padding="30dp"
                    android:layout_marginLeft="25dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/facebook_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Facebook"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:fontVariationSettings="'wght' 500"
                        android:layout_marginTop="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mp3, mp4"
                        android:textSize="30px"
                        android:textColor="@android:color/darker_gray"
                        app:backgroundTint="@null"
                        android:background="@drawable/low_op_button_bg"/>
                </LinearLayout>
            </TableRow>

            <!-- Segunda fila -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <!-- Celda 2,1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/platform_btn_bg"
                    android:padding="30dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/instagram_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Instagram"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:fontVariationSettings="'wght' 500"
                        android:layout_marginTop="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mp3, mp4"
                        android:textSize="30px"
                        android:textColor="@android:color/darker_gray"
                        app:backgroundTint="@null"
                        android:background="@drawable/low_op_button_bg"/>
                </LinearLayout>

                <!-- Celda 2,2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/platform_btn_bg"
                    android:padding="30dp"
                    android:layout_marginLeft="25dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/facebook_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Facebook"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:fontVariationSettings="'wght' 500"
                        android:layout_marginTop="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mp3, mp4"
                        android:textSize="30px"
                        android:textColor="@android:color/darker_gray"
                        app:backgroundTint="@null"
                        android:background="@drawable/low_op_button_bg"/>
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </ScrollView>

    <!-- Footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="20dp"
        android:background="@color/white"
        android:elevation="4dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/home_icon"/>

        <ImageView
            android:layout_marginStart="70dp"
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/profile_icon"/>

        <ImageView
            android:layout_marginStart="70dp"
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/files_icon"/>

        <ImageView
            android:layout_marginStart="70dp"
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/settings_icon"/>
    </LinearLayout>

</FrameLayout>