<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/primaryColor">

    <!-- Header Ad -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:elevation="10dp">

        <com.google.android.gms.ads.AdView
            android:id="@+id/ad_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id">
        </com.google.android.gms.ads.AdView>
    </LinearLayout>

    <!-- Body -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="30dp"
        android:layout_marginBottom="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convert your video"
            android:textSize="40px"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insert the url of instagram video"
            android:textSize="65px"
            android:textColor="@color/white"
            android:paddingEnd="60dp"
            app:fontVariationSettings="'wght' 900"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="30dp">

        <EditText
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:hint="Instagram URL"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="40px"
            android:padding="12dp"
            android:background="@drawable/input_bg"
            android:singleLine="true"
            android:ellipsize="end"
            android:scrollHorizontally="true"/>

        <Button
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:text="MP3"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:backgroundTint="@null"
            android:background="@drawable/input_bg"
            android:padding="0dp"
            android:layout_marginStart="5dp"/>

        <Button
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:text="Convert"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:backgroundTint="@null"
            android:background="@drawable/input_bg"
            android:padding="0dp"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

    <!-- Footer Ad -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:elevation="10dp"
        android:layout_marginBottom="60dp">

        <com.google.android.gms.ads.AdView
            android:id="@+id/ad_view_container2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id">
        </com.google.android.gms.ads.AdView>
    </LinearLayout>

    <!-- Footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="20dp"
        android:background="@color/white"
        android:elevation="4dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/btn_go_home"
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/home_icon"/>

        <ImageView
            android:id="@+id/btn_go_profile"
            android:layout_marginStart="70dp"
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/profile_icon"/>

        <ImageView
            android:id="@+id/btn_go_files"
            android:layout_marginStart="70dp"
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/files_icon"/>

        <ImageView
            android:id="@+id/btn_go_settings"
            android:layout_marginStart="70dp"
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/settings_icon"/>
    </LinearLayout>
</FrameLayout>